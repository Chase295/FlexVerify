# ===========================================
# FlexVerify - Environment Configuration
# ===========================================

# ===========================================
# External Access (Reverse Proxy)
# ===========================================
# Set your external domain here (without trailing slash)
EXTERNAL_URL=https://flexverify.chase295.com
# Hostname for Vite allowedHosts (without https://)
VITE_ALLOWED_HOST=flexverify.chase295.com

# Database (PostgreSQL with pgvector)
POSTGRES_USER=flexverify
POSTGRES_PASSWORD=flexverify123
POSTGRES_DB=flexverify
DATABASE_URL=postgresql://flexverify:flexverify123@db:5432/flexverify

# JWT Authentication
JWT_SECRET_KEY=flexverify-secret-key-change-in-production-2024
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Application
DEBUG=true
TIMEZONE=Europe/Berlin

# Face Recognition
FACE_RECOGNITION_THRESHOLD=0.6
FACE_RECOGNITION_MODEL=hog

# File Upload
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE_MB=50

# CORS (comma-separated) - Include external domain!
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://flexverify.chase295.com

# Frontend API URL
# For reverse proxy: use /api (relative path - recommended!)
# For local dev without proxy: http://localhost:8000/api
VITE_API_URL=/api

# Superadmin (created on first startup)
SUPERADMIN_EMAIL=admin@flexverify.dev
SUPERADMIN_PASSWORD=admin123
